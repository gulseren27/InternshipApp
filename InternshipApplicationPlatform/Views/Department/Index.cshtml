@model InternshipApplicationPlatform.Models.ViewModel.Class
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<html>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Content Wrapper. Contains page content -->
        <div>
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>Okul Personel Bilgileri</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="/Department/Index/">Anasayfa</a></li>
                                <li class="breadcrumb-item active">Profil</li>
                            </ol>
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>
            @foreach (var item in Model.Users.Where(u => u.Role == "Bölüm Başkanı").ToList())
            {

                foreach (var c in Model.Faculties)
                {

                    <!-- Main content -->
                    <section class="content">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="card" style="width: 100%;  height: 100vh;">

                                    <!-- Profile Image -->
                                    <div class="card card-primary card-outline">
                                        <div class="card-body box-profile">
                                            <div class="text-center" style="margin-left:50px;">
                                                <img class="profile-user-img img-fluid img-circle"
                                                     src="~/Image/Layout/mehmet.JPG"
                                                     alt="User profile picture"
                                                     style="float:left; height:130px; width:110px;">
                                            </div>

                                            <h3 class="profile-username" style="display: flex; padding-left: 320px;">@item.FullName</h3>

                                            <label class="text-muted" style="display: flex; padding-left: 200px;">Erzurum Teknik Üniversitesi | @c.Name</label>

                                            <ul class="list-group list-group-unbordered mb-5 " style="margin-top:100px;">

                                                <li class="list-group-item">
                                                    <b>Rolü</b> <a class="float-right">@item.Role</a>
                                                </li>
                                                <li class="list-group-item">
                                                    <b>Telefon</b> <a class="float-right">@item.Tel</a>
                                                </li>
                                                <li class="list-group-item">
                                                    <b>Mail</b> <a class="float-right">@item.Email</a>
                                                </li>
                                                <li class="list-group-item">
                                                    <b>Adres</b> <a class="float-right">@item.Adress</a>
                                                </li>

                                            </ul>

                                            <a href="#" class="btn btn-primary btn-block" style="height:40px; width:100px; float:right"><b>Güncelle</b></a>
                                        </div>
                                        <!-- /.card-body -->
                                       
                                    </div>
                                    <!-- /.card -->
                                </div>
                            </div>
                            
                        </div>
                    </section>
                }
            }
                </div>
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
              
</body>
</html>

