@model InternshipApplicationPlatform.Models.ViewModel.ForgotPasswordViewModel

@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    @using (Html.BeginForm("ForgotPassword", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <span class="login100-form-title">
            <a href="#">
                <img src="~/Image/Layout/etu-logo.jpg" alt="ETU" style="width:120px; height:120px;">
            </a>
        </span>

        <div class="p-t-31 p-b-9">
            <span class="txt1">
                Kullanıcı mail adresi
            </span>
        </div>
        <div class="wrap-input100">
            @Html.TextBoxFor(m => m.Email, new { @class = "input100", type = "email", @placeholder = "Email" })
            <span class="focus-input100"></span>
        </div>

        <div class="container-login100-form-btn m-t-17">
            <button type="submit" class="login100-form-btn">
                Gönder
            </button>
        </div>

        <div class="container-login100-form-btn m-t-17" style="display:flex; align-items:center; justify-content:center;">
            <a href="@Url.Action("SignIn", "Login")" class="btn-google">
                Giriş Yap
            </a>
        </div>
    }
</div>
