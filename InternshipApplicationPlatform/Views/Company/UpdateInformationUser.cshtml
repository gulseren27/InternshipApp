@model InternshipApplicationPlatform.Models.Company
@{
    ViewBag.Title = "UpdateInformationUser";
    Layout = "~/Views/Shared/_CompanyLayout.cshtml";
}

<style>
    .form-label {
        font-weight: bold;
        color: black !important;
    }

    .form-control {
        width: calc(100% - 20px);
        padding: 10px;
        box-sizing: border-box;
    }

    .btn-success {
        padding: 10px 20px;
        background-color: #28a745;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }
</style>

<br />
<h3 class="title-5 m-b-35" style="text-align: center;"><strong>Personel Bilgileri Güncelleme Sayfası</strong></h3>

@using (Html.BeginForm("UpdateInformationUser", "Company", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="form-group">
    <label class="form-label">Firma İmza</label>
    <input type="file" name="imza" class="form-control-file" />
    <br />
    <label class="form-label">Yetkili Görseli</label>
    <input type="file" name="yetkiliImg" class="form-control-file" />
    <br />
    <p style="color:black !important; font-weight:bold;">Staj Yeri Yetkilisi Bilgileri :</p>
    <label class="form-label">Adı</label>
    @Html.TextBoxFor(x => x.YetkiliName, new { @class = "form-control" })
    <br />
    <label class="form-label">Soyadı</label>
    @Html.TextBoxFor(x => x.YetkiliSurname, new { @class = "form-control" })
    <br />
    <label class="form-label">Email</label>
    @Html.TextBoxFor(x => x.YetkiliEmail, new { @class = "form-control" })
    <br />
    <label class="form-label">Telefon</label>
    @Html.TextBoxFor(x => x.YetkiliTel, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>
</div>
}
